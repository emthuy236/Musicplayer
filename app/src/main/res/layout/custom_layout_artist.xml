<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp">


    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:id="@+id/cardviewartisttrack"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgcustomartist"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"/>
    </androidx.cardview.widget.CardView>


   <LinearLayout
       android:layout_marginEnd="@dimen/_5sdp"
       android:layout_marginStart="@dimen/_10sdp"
       android:layout_centerVertical="true"
       android:layout_toEndOf="@id/cardviewartisttrack"
       android:orientation="vertical"
       android:layout_width="@dimen/_200sdp"
       android:layout_height="wrap_content">
       <TextView
           android:fontFamily="@font/roboto"
           android:id="@+id/namesingartist"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/_10sdp"
           android:gravity="start"
           android:textColor="@color/white"
           android:maxLines="1"
           android:text="Name Sing"
           android:textSize="@dimen/_13sdp"
           />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/graybackground"
            android:id="@+id/txtsttAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="2dp"
            android:text="Name Song"
            android:textSize="12sp" />
        <TextView
            android:textColor="@color/graybackground"
            android:layout_toEndOf="@id/txtsttAlbum"
            android:id="@+id/txtsttTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namesingartist"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:text="Name Song"
            android:textSize="12sp" />

    </LinearLayout>
   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="10dp"
        android:background="@color/graybackground" />


</RelativeLayout>