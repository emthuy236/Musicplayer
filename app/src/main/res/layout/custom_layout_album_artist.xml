<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgcustomAlbumartist"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtnamsongAlbumartist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/roboto"

        android:maxLines="1"
        android:text="Name Song"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:id="@+id/txtnamsingAlbumartist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/graybackground"
        android:layout_gravity=""
        android:layout_marginTop="3dp"
        android:text="Name Sing"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/txtnamsongAlbumartist"
        app:layout_constraintStart_toStartOf="@+id/txtnamsongAlbumartist"
        app:layout_constraintTop_toBottomOf="@+id/txtnamsongAlbumartist" />

</androidx.constraintlayout.widget.ConstraintLayout>