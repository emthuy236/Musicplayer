<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_marginStart="10dp"
        android:id="@+id/cardviewlistbottom"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imgcustomlistbottom"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/namesonglistbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cardviewlistbottom"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_toEndOf="@id/cardviewlistbottom"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="Name Song"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        />

    <TextView
        android:layout_toEndOf="@id/cardviewlistbottom"
        android:id="@+id/namesinglistbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namesonglistbottom"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:text="Name Sing"
        android:textColor="@color/graybackground"
        android:textSize="14sp"
        />
    <View
        android:layout_marginEnd="10dp"
        android:background="@color/graybackground"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_below="@id/cardviewlistbottom"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:id="@+id/img_run_music_listbottom"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_run_music" />


</RelativeLayout>